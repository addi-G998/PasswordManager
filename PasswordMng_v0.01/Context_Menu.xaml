<Window x:Class="PasswordMng_v0._01.Context_Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordMng_v0._01"
        mc:Ignorable="d"
        Title="Context_Menu" Height="96" Width="92" WindowStyle="None" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <Button x:Name="edit_btn" Content="Edit" HorizontalAlignment="Center" VerticalAlignment="Top" Width="92" Height="32" Background="#FF739C5C" Click="edit_Btn_Click"/>
        <Button x:Name="delete_Btn" Content="Delete" HorizontalAlignment="Center" VerticalAlignment="Top" Width="92" Height="32" Margin="0,32,0,0" Background="#FFB36250" Click="delete_Btn_Click"/>
        <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Top" Width="92" Height="32" Margin="0,64,0,0" Click="cancelBtn_Click"/>

    </Grid>
</Window>
