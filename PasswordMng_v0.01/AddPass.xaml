            <Label Content="Username" Margin="113,167,106,250" FontSize="16" RenderTransformOrigin="0.817,0.571"/>
            <Label Content="Password" Margin="113,257,113,160" FontSize="16"/>
            <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Left" Margin="10,383,0,0" VerticalAlignment="Top" Width="120" Click="cancelBtn_Click" Height="35" FontSize="14"/>
        </Grid>
    </Border>
</Window>
